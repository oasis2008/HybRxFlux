<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_coordinator"
    style="@style/BaseCoordinatorStyle"
    tools:context=".ui.shop.RegisterShopAty">

    <include layout="@layout/include_tool_bar" />

    <LinearLayout
        style="@style/BaseLinearlayoutStyle"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:id="@+id/sv_form"
            style="@style/BaseScrollviewStyle">

            <LinearLayout
                android:id="@+id/ll_shop_form"
                style="@style/BaseLinearlayoutContantStyle">

                <android.support.design.widget.TextInputLayout style="@style/BaseTextinputStyle">

                    <EditText
                        android:id="@+id/et_shop_name"
                        style="@style/BaseEditStyle"
                        android:hint="@string/shop" />

                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/sp_shop_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:entries="@array/shop_type"
                    android:spinnerMode="dialog" />

                <Button
                    android:id="@+id/btn_register_shop"
                    style="@style/BaseButtonStyle"
                    android:text="@string/title_activity_register_aty" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>


